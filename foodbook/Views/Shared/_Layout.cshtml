@using foodbook.Helpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - foodbook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/foodbook.styles.css" asp-append-version="true" />
</head>

<body>
    @{ 
        var currentController = ViewContext.RouteData.Values["Controller"] as string; 
        var currentAction = ViewContext.RouteData.Values["Action"] as string; 
        var currentId = ViewContext.RouteData.Values["id"] as string;
        var isAccountPage = string.Equals(currentController, "Account", StringComparison.OrdinalIgnoreCase) && (string.Equals(currentAction, "Login", StringComparison.OrdinalIgnoreCase) || string.Equals(currentAction, "Register", StringComparison.OrdinalIgnoreCase) || string.Equals(currentAction, "ForgotPassword", StringComparison.OrdinalIgnoreCase) || string.Equals(currentAction, "VerifyEmail", StringComparison.OrdinalIgnoreCase) || string.Equals(currentAction, "VerifySuccess", StringComparison.OrdinalIgnoreCase) || string.Equals(currentAction, "ResetPassword", StringComparison.OrdinalIgnoreCase));
        var isOwnProfile = string.Equals(currentController, "Profile", StringComparison.OrdinalIgnoreCase) && string.Equals(currentAction, "Info", StringComparison.OrdinalIgnoreCase) && string.IsNullOrEmpty(currentId);
    }
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="text-green bi bi-book"><b>Foodbook</b></i>
                </a>


                @if (!isAccountPage && Context.Session.IsLoggedIn())
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between align-items-center">
                        <!-- Mobile Search - Only visible on mobile -->
                        <div class="d-lg-none w-100 mb-3">
                            <div class="search-container">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0" placeholder="Tìm kiếm công thức, người dùng">
                                </div>
                            </div>
                        </div>
                        
                        <!-- Mobile User Info - Only visible on mobile -->
                        <div class="d-lg-none w-100 mb-3">
                            @{ var avatar = Context.Session.GetString("avatar_img"); var avatarSrc = string.IsNullOrEmpty(avatar) ? Url.Content("~/images/default-avatar.jpg") : avatar; }
                            <div class="d-flex align-items-center justify-content-between">
                                <a class="d-flex align-items-center text-decoration-none" href="/Profile/Info">
                                    <img id="navbar-avatar" src="@avatarSrc"
                                         alt="User Profile" 
                                         class="rounded-circle me-2" 
                                         style="width: 40px; height: 40px; object-fit: cover;">
                                    <span class="text-dark fw-bold">@Context.Session.GetUsername()</span>
                                </a>
                            </div>
                        </div>
                        
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-green fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Bảng tin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Recipes">Công thức</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Search" asp-action="Search">Tìm kiếm</a>
                            </li>
                            @if (Context.Session.IsAdmin())
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-shield-check"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                            <i class="bi bi-house"></i> Tổng quan hệ thống
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                            <i class="bi bi-people"></i> Quản lý người dùng
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="ContentModeration">
                                            <i class="bi bi-file-check"></i> Kiểm duyệt nội dung
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="CategoryManagement">
                                            <i class="bi bi-funnel"></i> Quản lý phân loại
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="IngredientManagement">
                                            <i class="bi bi-list-ul"></i> Quản lý nguyên liệu
                                        </a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                        
                        <!-- Desktop Search and User Profile - Only visible on desktop -->
                        <div class="d-none d-lg-flex align-items-center">
                            <div class="search-container me-3">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0" placeholder="Tìm kiếm công thức, người dùng">
                                </div>
                            </div>
                            
                            <div class="user-profile">
                                <a class="d-flex align-items-center text-decoration-none" href="/Profile/Info">
                                    <img id="navbar-avatar" src="@avatarSrc"
                                         alt="User Profile" 
                                         class="rounded-circle me-2" 
                                         style="width: 40px; height: 40px; object-fit: cover;">
                                    <span class="text-dark">@Context.Session.GetUsername()</span>
                                </a>
                            </div>
                            
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-secondary ms-3">
                                <i class="bi bi-box-arrow-right"></i> Đăng xuất
                            </a>
                        </div>
                        
                        <!-- Mobile Logout Button - Only visible on mobile -->
                        <div class="d-lg-none w-100 mt-3">
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger w-100">
                                <i class="bi bi-box-arrow-right"></i> Đăng xuất
                            </a>
                        </div>
                    </div>
                }
            </div>
        </nav>
    </header>
    
    <!-- Global Notifications -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show position-fixed" style="top: 80px; right: 20px; z-index: 1050; min-width: 300px;" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show position-fixed" style="top: 80px; right: 20px; z-index: 1050; min-width: 300px;" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show position-fixed" style="top: 80px; right: 20px; z-index: 1050; min-width: 300px;" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show position-fixed" style="top: 80px; right: 20px; z-index: 1050; min-width: 300px;" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (!isAccountPage && Context.Session.IsLoggedIn())
    {
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <!-- Toggle (inside sidebar) -->
            <button class="sidebar-toggle-btn" onclick="toggleSidebarCollapse()">
                <i class="bi bi-chevron-left" id="toggle-icon"></i>
            </button>

            @if (Context.Session.IsAdmin())
            {
                <div class="sidebar-section">
                    <h6 class="sidebar-section-title">ADMIN PANEL</h6>
                    <ul class="sidebar-menu">
                        <li class="sidebar-menu-item">
                            <a class="sidebar-menu-link @(currentController == "Admin" && currentAction == "Dashboard" ? "active" : "")" asp-controller="Admin" asp-action="Dashboard">
                                <i class="sidebar-menu-icon bi bi-house"></i>
                                <span>Tổng Quan hệ thống</span>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a class="sidebar-menu-link @(currentController == "Admin" && currentAction == "Users" ? "active" : "")" asp-controller="Admin" asp-action="Users">
                                <i class="sidebar-menu-icon bi bi-people"></i>
                                <span>Quản lý người dùng</span>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a class="sidebar-menu-link @(currentController == "Admin" && currentAction == "Content" ? "active" : "")" asp-controller="Admin" asp-action="Content">
                                <i class="sidebar-menu-icon bi bi-bookmark-check"></i>
                                <span>Kiểm duyệt nội dung</span>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a class="sidebar-menu-link @(currentController == "Admin" && currentAction == "Categories" ? "active" : "")" asp-controller="Admin" asp-action="Categories">
                                <i class="sidebar-menu-icon bi bi-funnel"></i>
                                <span>Quản lý phân loại</span>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a class="sidebar-menu-link @(currentController == "Admin" && currentAction == "Ingredients" ? "active" : "")" asp-controller="Admin" asp-action="Ingredients">
                                <i class="sidebar-menu-icon bi bi-list-ul"></i>
                                <span>Quản lý nguyên liệu</span>
                            </a>
                        </li>
                    </ul>
                </div>
            }

            <div class="sidebar-section">
                <h6 class="sidebar-section-title">TÀI KHOẢN CỦA TÔI</h6>
                <ul class="sidebar-menu">
                    <li class="sidebar-menu-item">
                        <a class="sidebar-menu-link @(isOwnProfile ? "active" : "")" href="/Profile/Info">
                            <i class="sidebar-menu-icon bi bi-person"></i>
                            <span>Hồ sơ của tôi</span>
                        </a>
                    </li>
                    <li class="sidebar-menu-item">
                        <a class="sidebar-menu-link @(currentController == "Home" && currentAction == "MyRecipes" ? "active" : "")" asp-controller="Home" asp-action="MyRecipes">
                            <i class="sidebar-menu-icon bi bi-book"></i>
                            <span>Sổ tay của tôi</span>
                        </a>
                    </li>
                    <li class="sidebar-menu-item">
                        <a class="sidebar-menu-link @(currentController == "Recipe" && currentAction == "Add" ? "active" : "")" asp-controller="Recipe" asp-action="Add">
                            <i class="sidebar-menu-icon bi bi-plus-circle"></i>
                            <span>Thêm công thức mới</span>
                        </a>
                    </li>
                    <li class="sidebar-menu-item">
                        <a class="sidebar-menu-link @(currentController == "Account" && currentAction == "Settings" ? "active" : "")" asp-controller="Account" asp-action="Settings">
                            <i class="sidebar-menu-icon bi bi-gear"></i>
                            <span>Cài đặt</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Mobile overlay toggle removed as requested -->

        <!-- Main content with sidebar spacing -->
        <div class="main-content" id="mainContent">
            <div class="container mt-3">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    @if (!isAccountPage && Context.Session.IsLoggedIn())
    {
        <footer class="footer-section" id="mainFooter" style="transition: margin-left 0.3s ease;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-sm-12 col-md-6">
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Khám phá</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Về chúng tôi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Hỗ trợ</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="social-icons d-flex justify-content-end">
                            <a href="#" class="social-link me-3 text-gray">
                                <i class="bi bi-facebook fs-5"></i>
                            </a>
                            <a href="#" class="social-link me-3 text-gray">
                                <i class="bi bi-instagram fs-5"></i>
                            </a>
                            <a href="#" class="social-link me-3 text-gray">
                                <i class="bi bi-twitter fs-5"></i>
                            </a>
                            <a href="#" class="social-link text-gray">
                                <i class="bi bi-linkedin fs-5"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    }
    else
    {
        <footer class="footer-section">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-sm-12 col-md-6">
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Khám phá</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Về chúng tôi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Hỗ trợ</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="social-icons d-flex justify-content-end">
                            <a href="#" class="social-link me-3 text-gray">
                                <i class="bi bi-facebook fs-5"></i>
                            </a>
                            <a href="#" class="social-link me-3 text-gray">
                                <i class="bi bi-instagram fs-5"></i>
                            </a>
                            <a href="#" class="social-link me-3 text-gray">
                                <i class="bi bi-twitter fs-5"></i>
                            </a>
                            <a href="#" class="social-link text-gray">
                                <i class="bi bi-linkedin fs-5"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Auto-dismiss notifications -->
    <script>
        // Auto-dismiss notifications after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                setTimeout(function() {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>
    <script>
        function toggleSidebarCollapse() {
            var sidebar = document.getElementById('sidebar');
            var main = document.getElementById('mainContent');
            var footer = document.getElementById('mainFooter');
            if (!sidebar) return;
            sidebar.classList.toggle('collapsed');
            // cập nhật lại margin main khi collapse
            if (window.innerWidth > 768) {
                var rect = sidebar.getBoundingClientRect();
                if (main) {
                    main.style.marginLeft = rect.width + 'px';
                }
                if (footer) {
                    footer.style.marginLeft = rect.width + 'px';
                }
                document.documentElement.style.setProperty('--sidebar-computed-width', rect.width + 'px');
            }
        }

        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            if (!sidebar) return;
            sidebar.classList.toggle('show');
        }
        // Tính chiều rộng thật của sidebar (max-content) => set margin-left cho main và footer
        (function() {
            function applySidebarWidth() {
                var sidebar = document.getElementById('sidebar');
                var main = document.getElementById('mainContent');
                var footer = document.getElementById('mainFooter');
                if (!sidebar) return;
                if (window.innerWidth <= 768) {
                    if (main) main.style.marginLeft = '0px';
                    if (footer) footer.style.marginLeft = '0px';
                    return;
                }
                var rect = sidebar.getBoundingClientRect();
                if (main) {
                    main.style.marginLeft = rect.width + 'px';
                }
                if (footer) {
                    footer.style.marginLeft = rect.width + 'px';
                }
                document.documentElement.style.setProperty('--sidebar-computed-width', rect.width + 'px');
            }
            window.addEventListener('load', applySidebarWidth);
            window.addEventListener('resize', applySidebarWidth);
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
