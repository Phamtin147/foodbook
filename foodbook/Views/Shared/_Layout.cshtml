@using foodbook.Helpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - foodbook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/foodbook.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="text-green bi bi-book"><b>Foodbook</b></i>
                </a>
                
                @{ var currentController = ViewContext.RouteData.Values["Controller"] as string; var currentAction = ViewContext.RouteData.Values["Action"] as string; var isAccountPage = string.Equals(currentController, "Account", StringComparison.OrdinalIgnoreCase) && (string.Equals(currentAction, "Login", StringComparison.OrdinalIgnoreCase) || string.Equals(currentAction, "Register", StringComparison.OrdinalIgnoreCase) || string.Equals(currentAction, "ForgotPassword", StringComparison.OrdinalIgnoreCase)); }

                @if (!isAccountPage)
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between align-items-center">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-green fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Bảng tin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Recipes">Công thức</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Search">Tìm kiếm</a>
                            </li>
                            @if (Context.Session.IsAdmin())
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger fw-bold" asp-area="" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="bi bi-shield-check"></i> Admin
                                    </a>
                                </li>
                            }
                        </ul>
                        
                        <div class="d-flex align-items-center">
                            <div class="search-container me-3">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0" placeholder="Tìm kiếm công thức, người dùng">
                                </div>
                            </div>
                            
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-logout rounded-pill me-3 d-flex align-items-center">
                                <i class="bi bi-arrow-right me-1"></i>
                                Đăng xuất
                            </a>
                            
                            <div class="user-profile">
                                <a class="d-flex align-items-center text-decoration-none" href="@Url.Action("Profile", "Account")">
                                    <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" 
                                         alt="User Profile" 
                                         class="rounded-circle me-2" 
                                         style="width: 40px; height: 40px; object-fit: cover;">
                                    <span class="text-dark">@Context.Session.GetUsername()</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Khám phá</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Về chúng tôi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Hỗ trợ</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <div class="social-icons d-flex justify-content-end">
                        <a href="#" class="social-link me-3 text-gray">
                            <i class="bi bi-facebook fs-5"></i>
                        </a>
                        <a href="#" class="social-link me-3 text-gray">
                            <i class="bi bi-instagram fs-5"></i>
                        </a>
                        <a href="#" class="social-link me-3 text-gray">
                            <i class="bi bi-twitter fs-5"></i>
                        </a>
                        <a href="#" class="social-link text-gray">
                            <i class="bi bi-linkedin fs-5"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
