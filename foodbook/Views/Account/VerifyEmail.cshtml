@model foodbook.Models.EmailVerificationViewModel
@{
    ViewData["Title"] = "Xác thực Email";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm login-card">
        <div class="card-body p-4 text-center">
            @if (Model.IsSuccess)
            {
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <h4 class="text-success mb-3">Xác thực thành công!</h4>
                <p class="text-muted mb-4">@Model.Message</p>
                <div class="d-grid gap-2">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-success">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập ngay
                    </a>
                </div>
            }
            else
            {
                <div class="mb-4">
                    <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
                </div>
                <h4 class="text-danger mb-3">Xác thực thất bại</h4>
                <p class="text-muted mb-4">@Model.Message</p>
                <div class="d-grid gap-2">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
                        <i class="bi bi-person-plus me-2"></i>Đăng ký lại
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .login-card {
        max-width: 500px;
        width: 100%;
    }
</style>

