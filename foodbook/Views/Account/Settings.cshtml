@{
    ViewData["Title"] = "Cài đặt";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-gear me-2"></i>
                    Cài đặt
                </h4>
            </div>
            <div class="card-body">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-tools text-muted" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="text-muted mb-3">Trang cài đặt đang được phát triển</h5>
                    <p class="text-muted">
                        Chúng tôi đang làm việc để mang đến cho bạn những tính năng cài đặt tốt nhất. 
                        Vui lòng quay lại sau!
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>
                            Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
