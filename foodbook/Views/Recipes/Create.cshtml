@{
    ViewData["Title"] = "Thêm công thức mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/recipe-create.css" />

<div class="recipe-create">
    <div class="sidebar">
        <div class="brand">
            <span class="logo">★</span>
            <span class="name">Foodbook</span>
        </div>
        <nav class="menu">
            <a class="item" href="#">Hồ sơ của tôi</a>
            <a class="item" href="#">Sổ tay của tôi</a>
            <a class="item active" href="#">Thêm công thức Mới</a>
            <a class="item" href="#">Cài đặt</a>
        </nav>
    </div>

    <div class="content">
        <div class="header">
            <div class="search">
                <input type="text" placeholder="Tìm kiếm công thức, người dùng" />
            </div>
            <div class="actions">
                <button class="btn btn-outline">Đăng xuất</button>
            </div>
        </div>

        <div class="form-grid">
            <div class="main-col">
                <div class="card">
                    <label class="label">Tên công thức</label>
                    <input class="input" placeholder="Gà nướng mật ong chanh" />
                </div>

                <div class="card">
                    <label class="label">Ảnh hoặc Video chính</label>
                    <div class="hero-media">
                        <img src="https://images.unsplash.com/photo-1604908554009-9e6149b86a8b?q=80&w=1470&auto=format&fit=crop" alt="preview" />
                    </div>
                </div>

                <div class="card">
                    <div class="section-title">Mô tả nguyên liệu</div>
                    <textarea class="textarea" rows="8">500g Ức gà không xương không da
3 muỗng canh Mật ong
2 muỗng canh Nước cốt chanh
1 muỗng canh Dầu ô liu</textarea>
                </div>

                <div class="card steps">
                    <div class="steps-title">Hướng dẫn từng bước</div>

                    <div class="step">
                        <div class="step-head">
                            <div class="step-index">Bước 1 :</n></div>
                        </div>
                        <label class="label">Mô tả bước</label>
                        <textarea class="textarea" rows="4">Trộn mật ong, nước cốt chanh, dầu ô liu, tỏi băm, hương thảo, muối và tiêu vào một tô lớn. Khuấy đều để tạo thành hỗn hợp ướp.</textarea>
                        <label class="label">Ảnh minh họa (tùy chọn)</label>
                        <div class="step-media">
                            <img src="https://images.unsplash.com/photo-1551183053-bf91a1d81141?q=80&w=1470&auto=format&fit=crop" alt="step" />
                        </div>
                        <button class="btn btn-danger step-remove">Xóa bước</button>
                    </div>

                    <div class="step">
                        <div class="step-head">
                            <div class="step-index">Bước 2 :</div>
                        </div>
                        <label class="label">Mô tả bước</label>
                        <textarea class="textarea" rows="4">Cho ức gà vào tô, đảm bảo gà được phủ đều hỗn hợp ướp. Ướp trong tủ lạnh ít nhất 30 phút hoặc qua đêm để gà thấm gia vị hơn.</textarea>
                        <label class="label">Ảnh minh họa (tùy chọn)</label>
                        <div class="step-media">
                            <img src="https://images.unsplash.com/photo-1601050690117-82f7457b6a2a?q=80&w=1470&auto=format&fit=crop" alt="step" />
                        </div>
                        <button class="btn btn-danger step-remove">Xóa bước</button>
                    </div>

                    <button class="btn btn-light add-step">+ Thêm bước</button>
                </div>

                <button class="btn btn-primary save">Lưu công thức</button>
            </div>

            <div class="side-col">
                <div class="card">
                    <div class="section-title">Nguyên liệu</div>
                    <div class="tag-input">
                        <input class="input" placeholder="Thêm nguyên liệu (ví dụ: Ức gà, 50)" />
                        <button class="btn btn-icon">+</button>
                    </div>
                    <div class="tags">
                        <span class="tag">Gà ×</span>
                        <span class="tag">gà1 ×</span>
                        <span class="tag">gà2 ×</span>
                        <span class="tag">gà3 ×</span>
                        <span class="tag">gà4 ×</span>
                        <span class="tag">gà5 ×</span>
                    </div>
                </div>

                <div class="card">
                    <div class="section-title">Phân Loại</div>
                    <div class="tag-input">
                        <input class="input" placeholder="Thêm phân loại(VD: Việt nam)" />
                        <button class="btn btn-icon">+</button>
                    </div>
                    <div class="tags">
                        <span class="tag">Việt nam ×</span>
                        <span class="tag">món chay ×</span>
                    </div>
                </div>

                <div class="card">
                    <div class="section-title">Thời gian nấu</div>
                    <div class="time-row">
                        <span class="icon">⏲</span>
                        <input class="input time" value="30" />
                        <span class="suffix">phút</span>
                    </div>
                </div>

                <div class="card">
                    <div class="section-title">Độ khó</div>
                    <div class="difficulty">
                        <button class="btn btn-success active">Dễ</button>
                        <button class="btn btn-light">Trung bình</button>
                        <button class="btn btn-light">Khó</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


