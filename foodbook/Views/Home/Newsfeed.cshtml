@model List<foodbook.Models.NewfeedViewModel>

@{
    ViewData["Title"] = "Newsfeed";
}

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var recipe in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden">

                        <!-- Phần đầu: Avatar + tên + nút theo dõi -->
                        <div class="d-flex align-items-center justify-content-between p-3 pb-0">

                            <!-- Bên trái: avatar + tên (đặt ngang hàng) -->
                            <div class="d-flex align-items-center">
                                <img src="@recipe.UserAvatarUrl"
                                     onerror="this.onerror=null;this.src='https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png';"
                                     alt="avatar"
                                     class="rounded-circle me-2"
                                     width="40" height="40"
                                     style="object-fit: cover;">
                                <div class="fw-semibold">@recipe.UserName</div>
                            </div>

                            <!-- Bên phải: nút theo dõi -->
                            <button class="btn btn-sm btn-success rounded-pill px-3">
                                Theo dõi
                            </button>
                        </div>

                        <!-- Bọc ảnh + nội dung bằng link -->
                        <a asp-controller="Home"
                           asp-action="Recipe_Detail"
                           asp-route-id="@recipe.RecipeId"
                           class="text-decoration-none text-dark">

                            <!-- Ảnh món ăn -->
                            @if (!string.IsNullOrEmpty(recipe.ThumbnailImg))
                            {
                                <img src="@recipe.ThumbnailImg"
                                     class="card-img-top mt-2"
                                     alt="@recipe.RecipeName"
                                     style="height: 230px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/400x250?text=No+Image"
                                     class="card-img-top mt-2"
                                     alt="No Image"
                                     style="height: 230px; object-fit: cover;">
                            }

                    <!-- Nội dung -->
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@recipe.RecipeName</h5>
                        <p class="card-text text-muted small mb-3">
                            @(recipe.Description?.Length > 100
                                                        ? recipe.Description.Substring(0, 100) + "..."
                                                        : recipe.Description)
                        </p>
                    </div>
                </a>

                            <!-- Các chỉ số tương tác -->
                            <div class="d-flex justify-content-around border-top pt-2 text-muted small">
                                <div><i class="bi bi-hand-thumbs-up me-1"></i>@recipe.LikesCount</div>
                                <div><i class="bi bi-chat me-1"></i>@recipe.CommentsCount</div>
                                <div><i class="bi bi-share me-1"></i>@recipe.SharesCount</div>
                            </div>
                        </div>

                    </div>
                }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">Không có công thức nào để hiển thị.</p>
            </div>
        }
    </div>
</div>

<!-- Bootstrap Icons (nếu chưa có) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
