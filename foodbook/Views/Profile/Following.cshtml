@model foodbook.Models.ProfileViewModel

@{
    var user = Model?.User;
    ViewData["Title"] = "Đang theo dõi";
    
    // Logic hiển thị nút theo ngữ cảnh
    var sessionEmail = Context.Session.GetString("user_email");
    var isOwnProfile = !string.IsNullOrEmpty(sessionEmail) && 
                     !string.IsNullOrEmpty(user?.email) && 
                     string.Equals(sessionEmail, user.email, StringComparison.OrdinalIgnoreCase);
}

<div class="following-page">
    <div class="container mt-4">
        <!-- Header -->
        <div class="d-flex align-items-center mb-4">
            <a href="@Url.Action("Info", "Profile", new { id = user?.user_id })" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <div>
                <h2 class="mb-0">Đang theo dõi</h2>
                <p class="text-muted mb-0">@(user?.full_name ?? user?.username ?? "Người dùng")</p>
            </div>
        </div>

        <!-- Following List -->
        <div class="row" id="following-container">
            @if (Model?.Following != null && Model.Following.Any())
            {
                @foreach (var following in Model.Following)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="following-card">
                            <div class="following-avatar">
                                <img src="@(following.AvatarUrl ?? "/images/default-avatar.jpg")" 
                                     alt="Avatar" 
                                     class="rounded-circle" 
                                     width="60" 
                                     height="60" 
                                     style="object-fit: cover;">
                            </div>
                            <div class="following-info">
                                <h6 class="following-name">
                                    <a href="@Url.Action("Info", "Profile", new { id = following.UserId })" 
                                       class="text-decoration-none text-dark">
                                        @(following.FullName ?? following.Username ?? "Ẩn danh")
                                    </a>
                                </h6>
                                <p class="following-bio text-muted small">
                                    @(following.Bio ?? "Chưa có giới thiệu")
                                </p>
                                <div class="following-stats">
                                    <span class="stat-item">
                                        <strong>@(following.RecipeCount ?? 0)</strong> công thức
                                    </span>
                                    <span class="stat-item">
                                        <strong>@(following.FollowersCount ?? 0)</strong> người theo dõi
                                    </span>
                                </div>
                            </div>
                            <div class="following-actions">
                                @if (isOwnProfile)
                                {
                                    <button class="btn btn-outline-secondary btn-sm unfollow-btn" 
                                            data-user-id="@following.UserId">
                                        <i class="bi bi-person-check"></i> Đã follow
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-outline-success btn-sm follow-btn" 
                                            data-user-id="@following.UserId">
                                        <i class="bi bi-person-plus"></i> Follow
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-person-heart text-muted" style="font-size: 4rem;"></i>
                        <h5 class="text-muted mt-3">Chưa theo dõi ai</h5>
                        <p class="text-muted">Khi bạn theo dõi ai đó, họ sẽ hiển thị ở đây</p>
                    </div>
                </div>
            }
        </div>

        <!-- Load More Button -->
        @if (Model?.Following != null && Model.Following.Count() >= 12)
        {
            <div class="text-center mt-4">
                <button id="loadMoreFollowingBtn" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-down-circle me-2"></i>
                    Tải thêm
                </button>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        let currentPage = 1;
        const pageSize = 12;
        let isLoading = false;

        // Load more following
        document.getElementById('loadMoreFollowingBtn')?.addEventListener('click', async function() {
            if (isLoading) return;
            
            isLoading = true;
            this.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Đang tải...';
            this.disabled = true;

            try {
                currentPage++;
                const userId = @(user?.user_id ?? 0);
                
                const response = await fetch(`/Profile/LoadMoreFollowing?userId=${userId}&page=${currentPage}&pageSize=${pageSize}`);
                const data = await response.json();

                if (data.success && data.following && data.following.length > 0) {
                    const container = document.getElementById('following-container');
                    
                    data.following.forEach(following => {
                        const followingCard = createFollowingCard(following);
                        container.insertAdjacentHTML('beforeend', followingCard);
                    });

                    // Hide load more button if no more data
                    if (data.following.length < pageSize) {
                        this.style.display = 'none';
                    }
                } else {
                    this.style.display = 'none';
                }
            } catch (error) {
                console.error('Error loading more following:', error);
                currentPage--; // Rollback page number
            } finally {
                isLoading = false;
                this.innerHTML = '<i class="bi bi-arrow-down-circle me-2"></i>Tải thêm';
                this.disabled = false;
            }
        });

        function createFollowingCard(following) {
            const isOwnProfile = @(isOwnProfile ? "true" : "false");
            const actionButton = isOwnProfile ? 
                `<button class="btn btn-outline-secondary btn-sm unfollow-btn" data-user-id="${following.userId}">
                    <i class="bi bi-person-check"></i> Đã follow
                </button>` :
                `<button class="btn btn-outline-success btn-sm follow-btn" data-user-id="${following.userId}">
                    <i class="bi bi-person-plus"></i> Follow
                </button>`;

            return `
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="following-card">
                        <div class="following-avatar">
                            <img src="${following.avatarUrl || '/images/default-avatar.jpg'}" 
                                 alt="Avatar" 
                                 class="rounded-circle" 
                                 width="60" 
                                 height="60" 
                                 style="object-fit: cover;">
                        </div>
                        <div class="following-info">
                            <h6 class="following-name">
                                <a href="/Profile/Info/${following.userId}" 
                                   class="text-decoration-none text-dark">
                                    ${following.fullName || following.username || 'Ẩn danh'}
                                </a>
                            </h6>
                            <p class="following-bio text-muted small">
                                ${following.bio || 'Chưa có giới thiệu'}
                            </p>
                            <div class="following-stats">
                                <span class="stat-item">
                                    <strong>${following.recipeCount || 0}</strong> công thức
                                </span>
                                <span class="stat-item">
                                    <strong>${following.followersCount || 0}</strong> người theo dõi
                                </span>
                            </div>
                        </div>
                        <div class="following-actions">
                            ${actionButton}
                        </div>
                    </div>
                </div>
            `;
        }
    </script>
}

<style>
.following-page {
    background: #f8f9fa;
    min-height: 100vh;
    padding: 2rem 0;
}

.following-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    padding: 1.5rem;
    transition: all 0.3s ease;
    border: none;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.following-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.following-avatar {
    text-align: center;
    margin-bottom: 1rem;
}

.following-info {
    flex-grow: 1;
    text-align: center;
    margin-bottom: 1rem;
}

.following-name {
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.following-name a:hover {
    color: #28a745 !important;
}

.following-bio {
    font-size: 0.875rem;
    line-height: 1.4;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.following-stats {
    display: flex;
    justify-content: center;
    gap: 1rem;
    font-size: 0.875rem;
    color: #6c757d;
}

.stat-item strong {
    color: #212529;
    font-weight: 600;
}

.following-actions {
    text-align: center;
}

.follow-btn, .unfollow-btn {
    border-radius: 20px;
    padding: 0.375rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.3s ease;
}

.follow-btn:hover, .unfollow-btn:hover {
    transform: scale(1.05);
}

@@media (max-width: 768px) {
    .following-stats {
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .following-card {
        padding: 1rem;
    }
}
</style>