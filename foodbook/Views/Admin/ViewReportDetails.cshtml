@model List<dynamic>
@{
    ViewData["Title"] = "Chi tiết báo cáo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Chi tiết báo cáo</h1>
        <a href="@Url.Action("ContentModeration", "Admin")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-flag me-2"></i>
                            Danh sách báo cáo (@Model.Count báo cáo)
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="d-flex align-items-start">
                                                <div class="flex-grow-1">
                                                    <h6 class="card-title">
                                                        <i class="fas fa-user me-2"></i>
                                                        @item.Reporter?.username
                                                    </h6>
                                                    <p class="card-text">@item.Report.body</p>
                                                    <small class="text-muted">
                                                        <i class="fas fa-clock me-1"></i>
                                                        @item.Report.created_at.ToString("dd/MM/yyyy HH:mm")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="text-end">
                                                <span class="badge bg-@(item.Report.status == "Đã xử lý" ? "success" : "warning") mb-2">
                                                    @item.Report.status
                                                </span>
                                                <br>
                                                @if (item.Report.status != "Đã xử lý")
                                                {
                                                    <form method="post" action="@Url.Action("MarkReportProcessed", "Admin")" style="display: inline;">
                                                        <input type="hidden" name="userId" value="@item.Report.user_id" />
                                                        <input type="hidden" name="recipeId" value="@item.Report.recipe_id" />
                                                        <button type="submit" class="btn btn-sm btn-success">
                                                            <i class="fas fa-check me-1"></i>
                                                            Đánh dấu đã xử lý
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <span class="text-success">
                                                        <i class="fas fa-check-circle me-1"></i>
                                                        Đã xử lý
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-flag fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Không có báo cáo nào</h5>
                        <p class="text-muted">Công thức này chưa có báo cáo nào từ người dùng.</p>
                        <a href="@Url.Action("ContentModeration", "Admin")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
.card {
    border: 1px solid #dee2e6;
    border-radius: 0.375rem;
}

.card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
}

.badge {
    font-size: 0.75em;
}

.btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}
</style>
