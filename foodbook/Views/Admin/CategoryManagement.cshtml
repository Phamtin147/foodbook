@model List<foodbook.Models.RecipeType>
@{
    ViewData["Title"] = "Quản lý phân loại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Quản lý phân loại</h1>
            </div>

            <!-- Search and Filter -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" placeholder="Tìm kiếm" id="searchInput">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex gap-2">
                        <select class="form-select" style="width: auto;">
                            <option>Ngày đăng kí (Mới nhất)</option>
                            <option>Ngày đăng kí (Cũ nhất)</option>
                            <option>Tên A-Z</option>
                            <option>Tên Z-A</option>
                        </select>
                        <button class="btn btn-outline-secondary">
                            <i class="fas fa-filter"></i> Lọc
                        </button>
                    </div>
                </div>
            </div>

            <!-- Add Category Section -->
            <div class="card shadow mb-4">
                <div class="card-body">
                    <h5 class="card-title">Thêm Phân Loại:</h5>
                    <form method="post" action="@Url.Action("AddCategory", "Admin")" class="d-flex gap-2">
                        <input type="text" class="form-control" name="content" placeholder="Thêm phân loại (VD: Việt nam)" required>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-plus"></i>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Category Table -->
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Type ID</th>
                                    <th>Name</th>
                                    <th>Registered</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>T@(category.recipe_type_id.ToString().PadLeft(3, '0'))</td>
                                        <td>@category.content</td>
                                        <td>@category.created_at.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <form method="post" action="@Url.Action("DeleteCategory", "Admin")" style="display: inline;">
                                                <input type="hidden" name="recipeTypeId" value="@category.recipe_type_id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa phân loại" 
                                                        onclick="return confirm('Bạn có chắc chắn muốn xóa phân loại này?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
</div>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

