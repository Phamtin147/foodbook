@model dynamic
@{
    ViewData["Title"] = "Chi tiết công thức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Chi tiết công thức</h1>
        <a href="@Url.Action("ContentModeration", "Admin")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <!-- Recipe Information -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-utensils me-2"></i>
                        @Model.Recipe.name
                    </h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Recipe.thumbnail_img))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.Recipe.thumbnail_img" alt="@Model.Recipe.name" 
                                 class="img-fluid rounded" style="max-height: 300px;">
                        </div>
                    }
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Tác giả:</strong> @Model.User?.username
                        </div>
                        <div class="col-md-6">
                            <strong>Ngày tạo:</strong> @Model.Recipe.created_at.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Thời gian nấu:</strong> @Model.Recipe.cook_time phút
                        </div>
                        <div class="col-md-6">
                            <strong>Độ khó:</strong> @Model.Recipe.level
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Recipe.description))
                    {
                        <div class="mb-3">
                            <strong>Mô tả:</strong>
                            <p class="mt-2">@Model.Recipe.description</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Ingredients -->
            @if (Model.Ingredients != null && Model.Ingredients.Count > 0)
            {
                <div class="card shadow mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>
                            Nguyên liệu
                        </h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            @foreach (var ingredient in Model.Ingredients)
                            {
                                <li class="list-group-item">
                                    <i class="fas fa-circle me-2" style="font-size: 0.5rem; color: #6c757d;"></i>
                                    @ingredient.name
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <!-- Cooking Steps -->
            @if (Model.Steps != null && Model.Steps.Count > 0)
            {
                <div class="card shadow mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-list-ol me-2"></i>
                            Các bước thực hiện
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var step in Model.Steps)
                        {
                            <div class="mb-4">
                                <div class="d-flex align-items-start">
                                    <span class="badge bg-primary me-3" style="min-width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                        @step.step
                                    </span>
                                    <div class="flex-grow-1">
                                        <p class="mb-2">@step.instruction</p>
                                        
                                        <!-- Step Media -->
                                        @if (Model.StepMedia.ContainsKey(step.step) && Model.StepMedia[step.step].Count > 0)
                                        {
                                            <div class="row">
                                                @foreach (var media in Model.StepMedia[step.step])
                                                {
                                                    <div class="col-md-4 mb-2">
                                                        @if (!string.IsNullOrEmpty(media.media_img))
                                                        {
                                                            <img src="@media.media_img" alt="Step @step.step" 
                                                                 class="img-fluid rounded" style="max-height: 150px;">
                                                        }
                                                        @if (!string.IsNullOrEmpty(media.media_video))
                                                        {
                                                            <video controls class="img-fluid rounded" style="max-height: 150px;">
                                                                <source src="@media.media_video" type="video/mp4">
                                                                Your browser does not support the video tag.
                                                            </video>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Actions Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-tools me-2"></i>
                        Hành động
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <!-- Flag Recipe -->
                        <form method="post" action="@Url.Action("FlagRecipe", "Admin")">
                            <input type="hidden" name="recipeId" value="@Model.Recipe.recipe_id" />
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="fas fa-flag me-2"></i>
                                Cắm cờ bài viết
                            </button>
                        </form>
                        
                        <!-- View Reports -->
                        <a href="@Url.Action("ViewReportDetails", "Admin", new { recipeId = Model.Recipe.recipe_id })" 
                           class="btn btn-outline-info w-100">
                            <i class="fas fa-bars me-2"></i>
                            Xem báo cáo
                        </a>
                        
                        <!-- Back to Moderation -->
                        <a href="@Url.Action("ContentModeration", "Admin")" 
                           class="btn btn-outline-secondary w-100">
                            <i class="fas fa-arrow-left me-2"></i>
                            Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>

            <!-- Recipe Stats -->
            <div class="card shadow mt-3">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Thống kê
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h6 class="text-muted">Recipe ID</h6>
                                <h4 class="text-primary">R@(Model.Recipe.recipe_id?.ToString("D3"))</h4>
                            </div>
                        </div>
                        <div class="col-6">
                            <h6 class="text-muted">Steps</h6>
                            <h4 class="text-success">@(Model.Steps?.Count ?? 0)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
