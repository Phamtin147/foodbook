@model foodbook.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Admin Dashboard Overview</h1>
            </div>

            <!-- Summary Statistics -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Users</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                                    <div class="text-xs text-muted">@Model.NewUsersThisWeek new users this week</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Recipes</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalRecipes</div>
                                    <div class="text-xs text-muted">@Model.NewRecipesThisWeek new recipes this week</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-book fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Total Likes</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalLikes</div>
                                    <div class="text-xs text-muted">All time likes</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-heart fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Total Comments</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalComments</div>
                                    <div class="text-xs text-muted">@Model.NewCommentsToday new comments today</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-comments fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Row -->
            <div class="row mb-4">
                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">New User Registrations</h6>
                        </div>
                        <div class="card-body">
                            <div class="chart-area">
                                <canvas id="userRegistrationsChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Content & Interaction Metrics</h6>
                        </div>
                        <div class="card-body">
                            <div class="chart-pie pt-4 pb-2">
                                <canvas id="contentMetricsChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Management Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <a href="@Url.Action("UserManagement", "Admin")" class="text-decoration-none">
                        <div class="card border-left-primary shadow h-100 py-2 dashboard-card">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Quản lý người dùng</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                                        <div class="text-xs text-muted">Tổng số người dùng</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-users fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <a href="@Url.Action("ContentModeration", "Admin")" class="text-decoration-none">
                        <div class="card border-left-warning shadow h-100 py-2 dashboard-card">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Kiểm duyệt nội dung</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.FlaggedContent.Count</div>
                                        <div class="text-xs text-muted">Reports đang xử lý</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-flag fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <a href="@Url.Action("CategoryManagement", "Admin")" class="text-decoration-none">
                        <div class="card border-left-info shadow h-100 py-2 dashboard-card">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Quản lý phân loại</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Categories.Count</div>
                                        <div class="text-xs text-muted">Tổng số phân loại</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-tags fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <a href="@Url.Action("IngredientManagement", "Admin")" class="text-decoration-none">
                        <div class="card border-left-success shadow h-100 py-2 dashboard-card">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Quản lý nguyên liệu</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Ingredients.Count</div>
                                        <div class="text-xs text-muted">Tổng số nguyên liệu</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-carrot fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>

.border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
}

.border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
}

.border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
}

.border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
}

.chart-area {
    position: relative;
    height: 10rem;
    width: 100%;
}

.chart-pie {
    position: relative;
    height: 15rem;
    width: 100%;
}

.dashboard-card {
    transition: all 0.3s ease;
}

.dashboard-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}
</style>

<script>
// User Registrations Chart - Data from DB
const monthLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthLabels));
const monthlyUserCounts = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyUserCounts));

const ctx1 = document.getElementById('userRegistrationsChart').getContext('2d');
new Chart(ctx1, {
    type: 'bar',
    data: {
        labels: monthLabels,
        datasets: [{
            label: 'New Users',
            data: monthlyUserCounts,
            backgroundColor: '#1cc88a',
            borderColor: '#1cc88a',
            borderWidth: 1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});

// Content Metrics Chart - Data from DB
const ctx2 = document.getElementById('contentMetricsChart').getContext('2d');
new Chart(ctx2, {
    type: 'doughnut',
    data: {
        labels: ['Recipes', 'Comments', 'Likes'],
        datasets: [{
            data: [@Model.TotalRecipes, @Model.TotalComments, @Model.TotalLikes],
            backgroundColor: ['#4e73df', '#36b9cc', '#1cc88a'],
            hoverBackgroundColor: ['#2e59d9', '#2c9faf', '#17a673'],
            hoverBorderColor: "rgba(234, 236, 244, 1)",
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'bottom'
            }
        }
    }
});
</script>
