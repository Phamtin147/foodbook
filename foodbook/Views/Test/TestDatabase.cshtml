@model IEnumerable<foodbook.Models.User>
@{
    ViewData["Title"] = "Test Database";
}

<div class="container mt-4">
    <h2>Test Database Connection</h2>
    
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }
    
    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Test Login</h3>
            <form method="post" action="@Url.Action("TestLogin", "Test")">
                <div class="mb-3">
                    <label for="emailOrPhone" class="form-label">Email hoáº·c Username:</label>
                    <input type="text" class="form-control" id="emailOrPhone" name="emailOrPhone" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Test Login</button>
            </form>
        </div>
        
        <div class="col-md-6">
            <h3>User Table (Login)</h3>
            @if (ViewBag.LoginUsers != null)
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Password (first 5 chars)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in ViewBag.LoginUsers as IEnumerable<foodbook.Models.UserLogin>)
                            {
                                <tr>
                                    <td>@user.username</td>
                                    <td>@user.email</td>
                                    <td>@user.role</td>
                                    <td>@user.status</td>
                                    <td>@(user.password?.Substring(0, Math.Min(5, user.password.Length)) ?? "null")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            
            <h3>User-Trigger Table (Register)</h3>
            @if (ViewBag.RegisterUsers != null)
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Password (first 5 chars)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in ViewBag.RegisterUsers as IEnumerable<foodbook.Models.User>)
                            {
                                <tr>
                                    <td>@user.username</td>
                                    <td>@user.email</td>
                                    <td>@user.role</td>
                                    <td>@user.status</td>
                                    <td>@(user.password?.Substring(0, Math.Min(5, user.password.Length)) ?? "null")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
