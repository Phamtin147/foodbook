@{
    ViewData["Title"] = "Test Posts";
}

<div class="container mt-4">
    <h2>Test User Posts</h2>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Test User Posts</h3>
            <form method="get" action="@Url.Action("TestUserPosts", "Profile")">
                <div class="mb-3">
                    <label for="userId" class="form-label">User ID:</label>
                    <input type="number" class="form-control" id="userId" name="userId" required>
                </div>
                <button type="submit" class="btn btn-primary">Test Posts</button>
            </form>
        </div>
        
        <div class="col-md-6">
            <h3>Test Get User Posts (New Method)</h3>
            <form method="get" action="@Url.Action("GetUserPosts", "Profile")">
                <div class="mb-3">
                    <label for="testUserId" class="form-label">User ID:</label>
                    <input type="number" class="form-control" id="testUserId" name="userId" required>
                </div>
                <div class="mb-3">
                    <label for="page" class="form-label">Page:</label>
                    <input type="number" class="form-control" id="page" name="page" value="1" min="1">
                </div>
                <div class="mb-3">
                    <label for="pageSize" class="form-label">Page Size:</label>
                    <input type="number" class="form-control" id="pageSize" name="pageSize" value="8" min="1" max="20">
                </div>
                <button type="submit" class="btn btn-success">Test Get User Posts</button>
            </form>
            
            <hr>
            
            <h4>Quick Tests</h4>
            <div class="d-flex gap-2 flex-wrap">
                <button class="btn btn-outline-primary btn-sm" onclick="testPage(1)">Page 1</button>
                <button class="btn btn-outline-primary btn-sm" onclick="testPage(2)">Page 2</button>
                <button class="btn btn-outline-primary btn-sm" onclick="testPage(3)">Page 3</button>
                <button class="btn btn-outline-primary btn-sm" onclick="testPage(4)">Page 4</button>
            </div>
        </div>
    </div>

    @if (ViewBag.TestResult != null)
    {
        <div class="mt-4">
            <h3>Test Result</h3>
            <div class="alert alert-info">
                <pre>@ViewBag.TestResult</pre>
            </div>
        </div>
    }

    @if (ViewBag.LoadMoreResult != null)
    {
        <div class="mt-4">
            <h3>Load More Result</h3>
            <div class="alert alert-success">
                <pre>@ViewBag.LoadMoreResult</pre>
            </div>
        </div>
    }
</div>

<script>
    // Auto-fill current user ID if available
    document.addEventListener('DOMContentLoaded', function() {
        const currentUserId = @(ViewBag.CurrentUserId ?? 0);
        if (currentUserId > 0) {
            document.getElementById('userId').value = currentUserId;
            document.getElementById('testUserId').value = currentUserId;
        }
    });

    // Quick test function
    function testPage(page) {
        const userId = document.getElementById('testUserId').value;
        if (!userId) {
            alert('Vui lòng nhập User ID');
            return;
        }
        
        window.open(`/Profile/GetUserPosts?userId=${userId}&page=${page}&pageSize=8`, '_blank');
    }
</script>
